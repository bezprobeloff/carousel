{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions":true,
    "noEmit": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "~themes/*": ["./shared/ui/themes/*"],

      "~shared/*": ["./shared/*"],
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
